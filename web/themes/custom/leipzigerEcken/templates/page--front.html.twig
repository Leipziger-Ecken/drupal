            <a href="#" class="btn btn-default">
                Mehr erfahren
            </a>
            <a href="/node/add/le_akteur" type="button" class="btn btn-default">
                Akteur anlegen
            </a>
          </div>
        </div>
    </div>

    <div class="map-frontpage row">
        {{ drupal_view('frontpage', 'block_1') }}
    </div>

    <div class="row">
        <div class="col-md-4">
            <a href="/akteure" title="Zur Akteurs端bersicht">
              <h1 class="front-heading">Akteure</h1>
            </a>
              {{ drupal_view('frontpage', 'page_1') }}
