{% set node_id = paragraph.parent_id[0].value %}
{% set akteur_id = drupal_field('og_audience', 'node', node_id)[0]['#plain_text'] %}
{% block paragraph %}
<div class="bg-white mb-16">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    {% if content.field_heading[0] %}
    <h2 class="text-center text-3xl font-extrabold tracking-tight sm:text-4xl">
      {{ content.field_heading }}
    </h2>
    {% endif %}
    {% if content.field_body[0] %}
    <div class="text-center text-base font-semibold uppercase text-gray-600 tracking-wider prose">
      {{ content.field_body }}
    </div>
    {% endif %}

    {{ drupal_view('sponsors', 'webbuilder', akteur_id) }}
  </div>
</div>
{% endblock paragraph %}
