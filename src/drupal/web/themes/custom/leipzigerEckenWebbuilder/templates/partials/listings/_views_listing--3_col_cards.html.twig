<section class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="relative bg-gray-50 pb-20 px-4 sm:px-6 lg:pb-28 lg:px-8">
    <div class="absolute inset-0">
      <div class="bg-white h-1/3 sm:h-2/3"></div>
    </div>
    <div class="relative max-w-7xl mx-auto">
      <div class="text-center">
        <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
          Projekte
        </h2>
        <div class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center">
          <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
            Unsere Projekte im BÃ¼lowviertel.
          </p>

          {% if filters %}
          {{ exposed }}
          {% endif %}
        </div>
      </div>

      {% if rows -%}

      {# Featured articles #}
      {% for index,row in rows[0]['#rows'] %}
      {% if row['#node'].sticky[0].value == '1' %}
        {{ include('@leipzigerEckenWebbuilder/partials/listings/_views_listing--featured-teaser.html.twig', {content: row['#node'], index: index}) }}
      {% endif %}
      {% endfor %}

      <div class="mt-12 max-w-lg mx-auto grid gap-x-5 gap-y-10 lg:grid-cols-3 lg:max-w-none">
        {# regular articles #}
        {% for index,row in rows[0]['#rows'] %}
        {% if row['#node'].sticky[0].value == '0' %}
          {{ include('@leipzigerEckenWebbuilder/partials/listings/_views_listing--teaser-card.html.twig', {content: row['#node'], index: index}) }}
        {% endif %}
        {% endfor %}
      </div>

      {% elseif empty -%}
        {{ empty }}
      {% endif %}

      {{ pager }}
    </div>
  </div>
</section>
