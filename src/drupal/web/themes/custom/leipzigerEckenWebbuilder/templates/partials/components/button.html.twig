{% set tag = tag|default('a') %}
{% set type = type|default('default') %}
{% set size = size|default('md') %}
<{{ tag }}
  class="{{ webbuilder_layout_styles().button.base }} {{ webbuilder_layout_styles().button[type] }} {{ webbuilder_layout_styles().button[size] }} {{ class }}"
  {% if href %}href="{{ href }}"{% endif %}
  {% if onclick %}onclick="{{ onclick }}"{% endif %}
  {{ attributes|raw }}
>
  {{ label|raw }}
</{{ tag }}>
