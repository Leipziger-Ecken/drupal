{% if header %}
  <header>
    {{ header }}
  </header>
{% endif %}

{{ attachment_before }}

{{ attachment_after }}

{% if footer %}
  <footer>
    {{ footer }}
  </footer>
{% endif %}


<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white pb-16 px-4 sm:px-6 lg:pb-20 lg:px-8">
    <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">

      <!--- TODO: divide bar between featured article and this -->
      <div class="mb-24">
        <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
          Events
        </h2>
        <div class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center">
          <p class="mt-3 text-xl text-gray-500 sm:mt-4">
            Unsere Veranstaltungen im Bülowviertel.
          </p>

          {% if filters %}
          {{ exposed }}
          {% endif %}
          {#
          <form class="mt-6 flex flex-col sm:flex-row lg:mt-0 lg:justify-end">
            <div>
              <label for="search" class="sr-only">Zeitraum</label>
              <input id="search" name="search" autocomplete="off" required class="appearance-none w-full px-4 py-2 border border-gray-300 text-base rounded-md text-gray-900 bg-white placeholder-gray-500 focus:outline-none focus:ring-primary-500 focus:border-primary-500 lg:max-w-xs" placeholder="Zeitraum eingeben">
            </div>
            <div class="mt-2 flex-shrink-0 w-full flex rounded-md shadow-sm sm:mt-0 sm:ml-3 sm:w-auto sm:inline-flex">
              <button type="button" class="w-full px-4 py-2 border border-transparent rounded-md flex items-center justify-center text-base font-medium text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 sm:w-auto sm:inline-flex">
                Suchen
              </button>
            </div>
          </form>
          #}
        </div>
      </div>

      {% if rows -%}

      {# Featured articles #}
      {% for index,row in rows[0]['#rows'] %}
      {% if row['#node'].sticky[0].value == '1' %}
        {{ include('@leipzigerEckenWebbuilder/partials/listings/_views_listing--featured-item.html.twig', {content: row['#node'], index: index}) }}
      {% endif %}
      {% endfor %}

      <!-- TODO: Datepicker rechts einfügen -->
      <div class="mt-12 grid gap-16 pt-12 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12">
        {# regular articles #}
        {% for index,row in rows[0]['#rows'] %}
        {% if row['#node'].sticky[0].value == '0' %}
          {{ include('@leipzigerEckenWebbuilder/partials/listings/_views_listing--item.html.twig', {content: row['#node'], index: index}) }}
        {% endif %}
        {% endfor %}
      </div>

      {% elseif empty -%}
        {{ empty }}
      {% endif %}

      {{ pager }}
    </div>
  </div>

</div>
