      {% if rows -%}

      {# Featured articles #}
      {% for index,row in rows[0]['#rows'] %}
      {% if row['#node'].sticky[0].value == '1' %}
        {{ include('@leipzigerEckenWebbuilder/partials/listings/_views_listing--featured-teaser.html.twig', {content: row['#node'], index: index}) }}
      {% endif %}
      {% endfor %}

      <div class="mt-6 pt-10 grid gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
        {# regular articles #}
        {% for index,row in rows[0]['#rows'] %}
        {% if row['#node'].sticky[0].value == '0' %}
          {{ include('@leipzigerEckenWebbuilder/partials/listings/_views_listing--teaser.html.twig', {content: row['#node'], index: index}) }}
