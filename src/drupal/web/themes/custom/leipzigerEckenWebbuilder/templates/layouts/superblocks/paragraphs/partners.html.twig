<section
  class="{{ webbuilder_layout_styles().container.md }} {{ webbuilder_layout_styles().padding.x_md }} {{ webbuilder_layout_styles().margin.b_sm }}"
  data-role="paragraph"
>
  <div class="text-center mb-8">
    {% if content.field_heading[0] %}
    <h2 class="{{ webbuilder_layout_styles().text.h3 }} italic">
      {{ content.field_heading }}
    </h2>
    {% endif %}
    {% if content.field_body[0] %}
    <div class="{{ webbuilder_layout_styles().text.prose }} mx-auto">
      {{ content.field_body }}
    </div>
    {% endif %}
  </div>
  {{ drupal_view('partners', 'webbuilder', akteur_id) }}
</section>
