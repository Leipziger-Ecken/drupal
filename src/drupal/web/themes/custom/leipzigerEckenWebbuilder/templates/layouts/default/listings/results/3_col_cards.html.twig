{% if rows -%}

{# Featured articles #}
{% for index,row in rows[0]['#rows'] %}
{% set row = row['#row'] %}
{% if row._entity.field_is_featured[0].value == '1' %}
  {{ include([
    '@leipzigerEckenWebbuilder/layouts/' ~ webbuilder_layout() ~ '/listings/items/featured-teaser.html.twig',
    '@leipzigerEckenWebbuilder/layouts/default/listings/items/featured-teaser.html.twig',
  ], {content: row._entity, index: index}) }}
{% endif %}
{% endfor %}

<div class="mt-12 pt-10 max-w-lg mx-auto grid gap-x-5 gap-y-10 lg:grid-cols-3 lg:max-w-none">
  {# regular articles #}
  {% for index,row in rows[0]['#rows'] %}
  {% set row = row['#row'] %}
  {% if not row._entity.field_is_featured[0] or row._entity.field_is_featured[0].value == '0' %}
    {{ include([
      '@leipzigerEckenWebbuilder/layouts/' ~ webbuilder_layout() ~ '/listings/items/teaser-card.html.twig',
      '@leipzigerEckenWebbuilder/layouts/default/listings/items/teaser-card.html.twig',
    ], {content: row._entity, index: index}) }}
  {% endif %}
  {% endfor %}
</div>

{% else %}
<div class="prose pt-6">
  {{ options.no_results_body|raw }}
</div>
{% endif %}

{{ pager }}
