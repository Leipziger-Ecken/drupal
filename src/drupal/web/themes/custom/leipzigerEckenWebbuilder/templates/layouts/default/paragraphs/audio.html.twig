<div
class="{{ webbuilder_layout_styles().container.md }} {{ webbuilder_layout_styles().padding.x_md }} {{ webbuilder_layout_styles().margin.b_md }}"
data-role="paragraph"
>
  <div class="{{ webbuilder_layout_styles().container.sm }}">
    {% if content.field_heading[0] %}
    <div class="text-lg {{ webbuilder_layout_styles().container.prose }} {{ webbuilder_layout_styles().margin.b_sm }}">
      <h2>
        <span class="block text-center {{ webbuilder_layout_styles().text.h2 }}">
          {{ content.field_heading }}
        </span>
      </h2>
    </div>
    {% endif %}
    {% set audio = content.field_audio[0] %}
    {% if audio %}
    <figure>
      {{ audio }}

      {% if content.field_audio_caption[0] %}
      <figcaption class="{{ webbuilder_layout_styles().text.figcaption }}">
        {{ content.field_audio_caption }}
      </figcaption>
      {% endif %}
    </figure>
    {% endif %}
  </div>
</div>
