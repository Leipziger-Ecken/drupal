{% if rows -%}
<div class="mt-12 pt-10 w-full" data-controller="slider">
  <div
    class="splide"
    data-slider-target="slider"
    data-prev-class="bg-primary-500 shadow-md"
    data-next-class="bg-primary-500 shadow-md"
  >
    <div class="splide__track">
      <ul class="splide__list">
        {# regular articles #}
        {% for index,row in rows[0]['#rows'] %}
        {% set row = row['#row'] %}
        <li class="splide__slide">
          {{ drupal_entity('node', row._entity.nid[0].value, 'webbuilder_teaser_slider') }}
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% else %}
<div class="prose pt-6">
  {{ options.no_results_body|raw }}
</div>
{% endif %}

{{ pager }}
