<section
  class="{{ webbuilder_layout_styles().container.lg }} {{ webbuilder_layout_styles().padding.x_md }} {{ webbuilder_layout_styles().margin.b_md }}"
  data-role="paragraph"
>
  {% if content.field_heading[0] %}
  <div class="text-lg {{ webbuilder_layout_styles().container.prose }} {{ webbuilder_layout_styles().margin.b_sm }}">
    <h2>
      {% if content.field_heading[0] %}
      <span class="block text-center {{ webbuilder_layout_styles().text.h2 }}">
        {{ content.field_heading }}
      </span>
      {% endif %}
    </h2>
  </div>
  {% endif %}
  {% if content.field_body[0] %}
  <div class="{{ webbuilder_layout_styles().text.prose }} mb-4 mx-auto">
    {{ content.field_body }}
  </div>
  {% endif %}
  {% set images = content.field_images_legacy|default(content.field_images) %}
  {% if images[0] %}
  <div class="grid grid-cols-1 sm:grid-cols-2 {% if cols >= 3 %}md:grid-cols-3{% endif %} {% if cols >= 4 %}lg:grid-cols-4{% endif %} auto-rows-auto gap-4 items-stretch">
  {% for i in range(0, 100) %}
    {% set image = images[i] %}
    {% if image %}
    <a
      href="{{ include('@leipzigerEckenWebbuilder/partials/components/media_image_uri.html.twig', {
        image: image,
        image_style: 'webbuilder_gallery_full',
        width: 1920,
      }) | trim }}"
      class="block overflow-hidden"
    >
      {{ include('@leipzigerEckenWebbuilder/partials/components/media_image.html.twig', {
        image: image,
        class:'h-full w-full object-cover',
        image_style: 'webbuilder_gallery_thumb',
        width: 610,
      }) }}
    </a>
    {% endif %}
  {% endfor %}
  </div>
  {% endif %}
</section>
