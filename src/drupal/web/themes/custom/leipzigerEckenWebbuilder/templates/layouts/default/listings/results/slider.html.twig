{% if rows -%}
<div class="mt-12 pt-10 w-full" data-controller="slider">
  <div
    class="splide"
    data-slider-target="slider"
    data-prev-class="bg-primary-500 shadow-md"
    data-next-class="bg-primary-500 shadow-md"
  >
    <div class="splide__track">
      <ul class="splide__list">
        {# regular articles #}
        {% for index,row in rows[0]['#rows'] %}
        {% set row = row['#row'] %}
        <li class="splide__slide">
          {{ include([
            '@leipzigerEckenWebbuilder/layouts/' ~ webbuilder_layout() ~ '/listings/items/teaser-slider.html.twig',
            '@leipzigerEckenWebbuilder/layouts/default/listings/items/teaser-slider.html.twig',
          ], {content: row._entity, index: index}) }}
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% else %}
<div class="prose pt-6">
  {{ options.no_results_body|raw }}
</div>
{% endif %}

{{ pager }}
