{% if rows -%}

{# Featured articles #}
{% for index,row in rows[0]['#rows'] %}
{% set row = row['#row'] %}
{% if row._entity.field_is_featured[0].value == '1' %}
  {{ include('@leipzigerEckenWebbuilder/layouts/' ~ webbuilder_layout() ~ '/listings/items/featured-teaser.html.twig', {content: row._entity, index: index}) }}
{% endif %}
{% endfor %}

<div class="mt-12 pt-10" data-controller="slider">
  <div class="splide" data-slider-target="slider">
    <div class="splide__track">
      <ul class="splide__list">
        {# regular articles #}
        {% for index,row in rows[0]['#rows'] %}
        {% set row = row['#row'] %}
        {% if not row._entity.field_is_featured[0] or row._entity.field_is_featured[0].value == '0' %}
        <li class="splide__slide">
          {{ include('@leipzigerEckenWebbuilder/layouts/' ~ webbuilder_layout() ~ '/listings/items/teaser-slider.html.twig', {content: row._entity, index: index}) }}
        </li>
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% else %}
<div class="prose pt-6">
  {{ options.no_results_body|raw }}
</div>
{% endif %}

{{ pager }}
