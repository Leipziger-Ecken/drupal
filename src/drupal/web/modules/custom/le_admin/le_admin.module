/**
 * Implements hook_page_attachments_alter
 * 
 */
function le_admin_page_attachments_alter(array &$attachments)
{
  $user = \Drupal::currentUser();
  $roles = $user->getRoles();
  
  if (in_array('authenticated', $roles)) {
    $attachments['#attached']['library'][] = 'le_admin/admin';
  }
}

