{% set destination = get_destination() %}
<article class="flex space-x-10">
  <div class="mr-4 w-32 md:w-96">
    <h3 class="text-sm md:text-lg font-bold mt-0">
      {{ label }}
      <br/>
      {% if node.status[0].value == '0' %}
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 whitespace-nowrap">
        {{ 'nicht veröffentlicht'|t }}
      </span>
      {% else %}
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
        {{ 'veröffentlicht'|t }}
      </span>
      {% endif %}
    </h3>
  </div>
  <div class="sm:flex sm:space-x-10">
    <div>
      <a class="button button--default button--small my-0 whitespace-nowrap"
        href="{{ drupal_url('/node/' ~ node.id() ~ '/edit', {query: {destination: destination }}) }}">
        {{ 'Seite bearbeiten'|t }}
      </a>
    </div>
    <div class="text-sm my-4 hidden sm:block">
      {{ 'Sortierung'|t }}: {{ content.field_weight[0]['#markup'] }}
    </div>
    {% if content.field_navigation[0] %}
    <div class="text-sm my-2 hidden sm:block pr-2">
      {{ 'Erscheint in Navigation'|t }}:
      <div class="text-gray-500">
        {{ content.field_navigation }}
      </div>
    </div>
    {% endif %}
  </div>
</article>
